<Window x:Class="ApplicationForTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApplicationForTesting"
        mc:Ignorable="d"
        Title="Application for testing" Height="550" Width="800" Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Приложение для тестирования" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <Frame Grid.Row="1" Name="FrmCalc" NavigationUIVisibility="Hidden"/>
        <Button Content="Миникалькулятор" Name="btnMoveCalc" Height="45" Width="245" FontSize="20" HorizontalAlignment="Left" Grid.Row="2" Margin="25,0,0,0" IsEnabled="False" Click="btnMoveCalc_Click"/>
        <Button Content="Заказ в Макдональдсе" Name="btnMoveOrder" Height="45" Width="245" FontSize="20" HorizontalAlignment="Right" Grid.Row="2" Margin="0,0,25,0" Click="btnMoveOrder_Click"/>
    </Grid>
</Window>
